    <!-- Masonry -->
    <script type="text/javascript" src="~/AllContent/js/masonry.min.js"></script>

    <!-- Carousel Swipe -->
    <script type="text/javascript" src="~/AllContent/js/carousel.swipe.min.js"></script>

    <!-- bxSlider -->
    <script type="text/javascript" src="~/AllContent/js/bxslider.min.js"></script>

    <!-- Tab Navigation-->
    <script type="text/javascript" src="~/AllContent/js/tab-navigation.js"></script>

    <!-- Custom Script-->
    <script type="text/javascript" src="~/AllContent/js/main.js"></script>

    <!-- Slider -->
    <script>
        $('#myCarousel').carousel({
            interval: 5000
        });
    </script>

<!-- Check input of pagination -->
    <script type="text/javascript">
        function checkInputPagination() {
            var input = document.getElementById("pagination").value;
            var maxItem = document.getElementById("maximumItem").value;

            if (isNaN(input)) {
                alert("Thông tin nhập vào không chính xác!");
                return false;
            } else if (input < 1) {
                alert("Kết quả phải lớn hơn 0");
                return false;
            } else if (input > maxItem) {
                alert("Kết quả phải nhỏ hơn hoặc bằng " + maxItem);
                return false;
            }

            return true;
        }
    </script>
</body>
</html>
